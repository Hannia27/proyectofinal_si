<div class="jumbotron mt-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <h3 align="center">ME LATE CHOCOLATE</h3>
            <img src="/img/5.png" class="rounded-circle mx-auto d-block m-4 signin" alt="signin">
            <div class="card">
                <div class="card-header">
                    Registrar cuenta
                </div>
                <div class="card-body">
                    <form action="/users/signup" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Correo electronico"
                                value="{{email}}">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Contraseña"
                                value="{{password}}">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="confirm_password"
                                placeholder="Confirmar contraseña" value="{{confirm_password}}">
                        </div>
                        <div class="form-group" style="display: flex; justify-content: center;">
                            <button type="submit" class="btn btn-primary">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br>
    <div class="form-grouo">
        <p align="right"><a href="../notes" class="btn btn-success" type="submit"><i class="fa fa-arrow-circle-o-left"
                    aria-hidden="true"> Regresar</i></a></p>
    </div>
</div>